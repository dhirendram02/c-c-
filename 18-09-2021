//wap to  print first 50 natural number using recursion
#include<stdio.h>
int num_print(int);
int main()
{
int n=1;
num_print(n);
return 0;
}
int num_print(int n)
{
if(n<50)
{
printf("%d",n);
num_print(n+1);
}
}

//wap to count the digits of a given number using recursion

#include<stdio.h>
int countdigits(int num)
{
int count = 0;
if(num>0)
{
count++;
count(num/10);
}
else{
return count;
}
int main(){
int num , count = 0;
scanf("%d",&num);
count=countdigits(num);
return 0;
}
